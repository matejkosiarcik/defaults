root = true

### UNIVERSAL RULES ###

# General
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
# max_line_length - probably better to leave to language specific tools

# Ignore binaries
[{*.{so,pdb,dylib,dll,cache,a},*.{zip,7z,gz,xz}}]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

# files to keep directories in git, must be totally empty
[{.{keep,empty},.{git,hg}{keep,empty}}]
insert_final_newline = false

# Makefiles must be indented using tabs
[{Makefile,{GNU,BSD}Makefile,*.make}]
indent_style = tab

# Trailing whitespace is generally permitted in markdown
# But it is rarely used and can introduce unwanted whitespace if enabled
# [*.md]
# trim_trailing_whitespace = false

# Most documentation formats prefer 2 spaces per indent level
[{*.{yml,yaml},*.{xml,html,svg,xlf},*.{md,mdown,markdown},*.{css,scss,sass,less}}]
indent_size = 2

# C-style languages multiline comments
[{*.{c,h,m,cpp,hpp,mpp,cc,hh,mm,C,H,M,cxx,hxx,mxx,c++,h++,m++},*.swift,*.{js,jsx,ts,tsx},*.{php,php3,php4,php5,php7},*.{java,scala,sc,kt,ktm,kts},*.{cs,csx,fs,fsx}}]
block_comment = *
block_comment_end = */
block_comment_start = /*

### Ruby ecosystem ###

# Indent Gemfile using 2 spaces
# TODO: check if bug (3 spaces indent at end of Gemfile.lock) is fixed
[{Gemfile,Gemfile.lock}]
indent_size = 2

### .NET ecosystem ###

# Encoding exception for VisualStudio project files
[*.{cs,csx,vb,vbx,csproj,njsproj,sln}]
charset = utf-8-bom

# config files indent diffrently
[*.{csproj,njsproj,Config,config,targets}]
indent_size = 2

[*.sln]
indent_style = tab
